<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STOM.MAUI.MainPage">

    <ScrollView>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition/>


            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0"
                 Text="Welcome to The Sto!"
                 FontSize="Large"
                 />
                 <Entry Grid.Column="1"
                 Text="This is a text box!"
                 />
            </Grid>
           
            <Button Grid.Row="1"
                Text="This is a button."
                />
        </Grid>
    </ScrollView>

</ContentPage>
