<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="STOM.MAUI.Views.ShopView"
             Title="TheSto"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label Grid.Column="0"
    Text="Shopping"
    FontSize="Large"
    />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="10*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--<Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Entry Grid.Column="0" Text="{Binding InventoryQuery}"/>
                                <Button Grid.Column="1" Text ="Search" Clicked="Search_Clicked"/>
                            </Grid>-->

                <!--Inventory-->
                <ListView
                ItemsSource="{Binding Products}"
                SelectedItem="{Binding SelectedProduct}"
                Grid.Column="0"
                Grid.Row="1"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="{Binding Display}" />
                                    <!--<Label Grid.Column="2" Text="{Binding Product.Name}" FontAttributes="Bold"/>
                                            -->
                                    <!--<Label Grid.Column="3" Text="{Binding Model.Description}"/>-->
                                    <!--
                                            <Label Grid.Column="3" Text="{Binding DisplayPrice}"/>
                                            <Label Grid.Column="4" Text="{Binding Product.Stock}"/>-->
                                    <!--<Button Grid.Column="5" 
                                                Text="Edit"
                                                Command="{Binding Path=EditCommand}"
                                                CommandParameter="{Binding}"
                                                />
                                                <Button Grid.Column="6" 
                                                Text="Delete"
                                                Command="{Binding Path=DeleteCommand}"
                                                CommandParameter="{Binding}"
                                                Clicked="InlineDelete_Clicked"
                                                ></Button>-->

                                    <!--<Button Grid.Column="2" 
                                    Text="Add to Cart"
                                    Clicked="AddtoCart_Clicked"/>-->


                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <!--Cart--> 
            <Grid Grid.Row="0" Grid.Column="1">
                    <ListView
                       ItemsSource="{Binding PIC}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="5*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Column="0" Text="{Binding Display}"/>
                                        
            <!--<Label Grid.Column="1" Text="{Binding DisplayPrice}"/>
                                                    <Label Grid.Column="2" Text="{Binding Model.Name}"/>
                                                    <Label Grid.Column="3" Text="{Binding Model.Quantity}"/>-->
            

                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button
                Grid.Row="0"
                Text="Add to Cart"
                Clicked="AddtoCart_Clicked"
                />
        <!--<Grid Grid.Row="2"
              Grid.ColumnSpan="2">
            <Button 
                Text="Checkout"
                Clicked="Checkout_Clicked">

            </Button>-->
            <Button
                Grid.Row="1"
                Text="Back to Home"
                Clicked="GoBack"
            />
            <!--</Grid>-->
        </Grid>
    </VerticalStackLayout>

 </ContentPage>